% Explore edge options
% pkg load image;

%% Load an image
img = imread('img/fall-leaves.png');  % also available: peppers.png, mandrill.png
imshow(img);

%% TODO: Create a Gaussian filter
hsize = 21;
sigma = 3;
filter = fspecial('gaussian', hsize, sigma);
%% TODO: Apply it, specifying an edge parameter (try different parameters)
smoothed = imfilter(img, filter, 'circular'); % symmetric, replicate, cicrular
imshow(smoothed);